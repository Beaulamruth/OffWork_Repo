<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                    @Html.ActionLink("OffWork", "Index", "Home", new { area = "" }, new { @class = "navbar-brand title" })
                   </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav title">
                    <li>
                        @Html.ActionLink("Employees", "Index", "Employees")
                    </li>
                    <li>
                        @Html.ActionLink("Employee Absence", "Index", "AbsenceDetails")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content-header">
        <div class="container-fluid">
        </div><!-- /.container-fluid -->
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="text-center">
                <strong>Copyright &copy; @DateTime.Now.Year  OffWork Management System.</strong> All rights reserved.
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)    

</body>
</html>
