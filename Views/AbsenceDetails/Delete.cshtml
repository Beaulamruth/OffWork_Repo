@model OffWork.Models.AbsenceDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Absence Detail</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Absence Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AbsenceType.AbsenceTypeValue)
        </dd>

        <dt>
            First Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>

        <dt>
            Absent From:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDateOfAbsence)
        </dd>

        <dt>
            Absent To:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDateOfAbsence)
        </dd>

        <dt>
            Start Date Full Day:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDateFullDay)
        </dd>

        <dt>
            End Date Full Day:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDateFullDay)
        </dd>

        <dt>
            IsApproved:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsApproved)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="col-md-offset-1 col-md-13">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    }
    <div>@Html.ActionLink("Back to List", "Index")</div>
</div>
